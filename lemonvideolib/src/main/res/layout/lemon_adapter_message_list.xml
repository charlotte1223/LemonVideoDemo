<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lemon_white"
              android:orientation="vertical">

    <View
        style="@style/lemon_line"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lemon_message_iv_ic"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:src="@drawable/lemon_message_list_qiu"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/lemon_message_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[每日推荐]最新电影"
                    android:textColor="#353535"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:singleLine="true"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/lemon_message_tv_AddTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="2016-08-26"
                    android:textColor="#a8a8a8"
                    android:textSize="11sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/lemon_message_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:layout_marginRight="40dp"
                android:singleLine="true"
                android:text="最新的电影大片荒野猎人已经上线了"
                android:textColor="#a8a8a8"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/lemon_line"></View>
</LinearLayout>