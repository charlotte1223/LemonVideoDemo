<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lemon_high"
                android:background="@color/lemon_top_bg">

    <TextView
        style="@style/top_title"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="25dp"
        android:text="@string/lemon_video"/>

    <ImageView
        android:id="@+id/lemon_video_recording"
        android:layout_width="@dimen/lemon_iv_top_rig_size"
        android:layout_height="@dimen/lemon_iv_top_rig_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/lemon_main_ma_top"
        android:src="@drawable/lemon_log"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/lemon_personal_information"
        android:layout_width="@dimen/lemon_iv_top_rig_size"
        android:layout_height="@dimen/lemon_iv_top_rig_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/lemon_top_function_rig"
        android:src="@drawable/lemon_yonghu_moren"/>
</RelativeLayout>